        <EditText
            android:id="@+id/room_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:hint="@string/address" />


        <EditText
            android:id="@+id/signup_firstname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:hint="City" />

        <EditText
            android:id="@+id/room_country"
