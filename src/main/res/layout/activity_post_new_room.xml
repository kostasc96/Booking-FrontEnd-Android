            android:id="@+id/room_bathrooms_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/bathrooms_number"/>

        <EditText
            android:id="@+id/room_bedrooms_number"
